#!/bin/sh
#/ Usage: renew-cert <domains_comma_separated>
#/ Options: -h/--help, print help
#/          --all, renew all certificates
#/          --upgrade, upgrade certbot-auto in-place

email="$LETSENCRYPT_EMAIL"
test -z "$email" && {
  echo 'fatal: no email. set $LETSENCRYPT_EMAIL and try again.' > /dev/stderr
  exit 1
}

domain="$1"
shift

test -z "$domain" && {
  usage-and-help $0
  exit 1
}

case "$domain" in
  --all)
    sudo service nginx stop
    sudo docker run -it --rm --net=host --name certbot \
      -v "/etc/letsencrypt:/etc/letsencrypt" \
      -v "/var/lib/letsencrypt:/var/lib/letsencrypt" \
      certbot/certbot renew
    status=$?
    sudo service nginx start
    ;;
  --upgrade)
    sudo docker pull certbot/certbot
    ;;
  -h*|--h*)
    usage-and-help $0
    ;;
  *)
    sudo service nginx stop
    sudo docker run -it --rm --net=host --name certbot \
      -v "/etc/letsencrypt:/etc/letsencrypt" \
      -v "/var/lib/letsencrypt:/var/lib/letsencrypt" \
      certbot/certbot certonly \
      --standalone \
      --domain $domain \
      --email $email $@
    status=$?
    sudo service nginx start
    ;;
esac

exit $status
