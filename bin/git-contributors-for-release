#! /usr/bin/env ruby
#
# git-contributors-for-release(1)
#
# Summary:
#   List the contributors' real names to a project. Optionally bind to a tag.
#
# Usage:
#   git-contributors-for-release
#   git-contributors-for-release v0.1.0.rc1...v0.1.0
#
# Author:
#   Parker Moore (@parkr)
#

require 'octokit'
require 'rugged'

pr_num = ARGV.first
repo   = Rugged::Repository.new(Rugged::Repository.discover(Dir.pwd))
remote = repo.remotes.first

if remote.nil?
  $stderr.puts "fatal: No remotes specified."
  abort
end

remote_url = remote.url
remote_url.sub!("git@github.com:", "https://github.com/")
remote_url.sub!(/\.git$/, "")

client = Octokit::Client.new(netrc: true)
repo   = Octokit::Repository.from_url(remote)

puts client.contributors(repo).map(&:login).map { |d|
  "[@#{d}](https://github.com/#{d})"
}.join(", ")
